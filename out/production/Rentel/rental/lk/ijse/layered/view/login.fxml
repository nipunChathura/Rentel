            <Label fx:id="logo" layoutX="179.0" layoutY="118.0" text="LT" textFill="#f2f2f2">
               <font>
                  <Font name="Berlin Sans FB Demi Bold" size="200.0" />
               </font>
            </Label>
            <Label fx:id="companyName" layoutX="46.0" layoutY="338.0" text="LAKSALA TRADING " textFill="#f8f8f8">
               <font>
                  <Font name="Bodoni MT Black" size="48.0" />
               </font>
            </Label>
         </children></AnchorPane>
      <AnchorPane layoutX="600.0" prefHeight="700.0" prefWidth="600.0" stylesheets="@style/LoginPage.css">
         <children>
            <FontAwesomeIconView fill="#0066cc" glyphName="USERS" layoutX="230.0" layoutY="207.0" size="10em" textAlignment="CENTER" />
            <Label layoutX="228.0" layoutY="226.0" text="Sign In" textFill="#0066cc">
               <font>
                  <Font name="Berlin Sans FB" size="48.0" />
