            <TextField fx:id="txtUsername" alignment="TOP_LEFT" layoutX="157.0" layoutY="381.0" prefHeight="40.0" prefWidth="300.0" promptText="Username" styleClass="text-field" stylesheets="@style/LoginPage.css">
